@page "/products"
@using Store.Dto;
@using Store.Service.Contract;

@inject IProductService _productService

<PageTitle>Product</PageTitle>

<MudTable Items="@products">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Category</MudTh>
        <MudTh>Price</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLable = "Name">@context.Name</MudTd>
        <MudTd DataLabel="Category">@context.Category</MudTd>
        <MudTd DataLabel="Price">@context.Price</MudTd>
        <MudTd DataLabel="Actions"><MudButton OnClick="OnEvaluateCLick" Variant="Variant.Filled" Color="Color.Primary">Evaluate></MudButton></MudTd>
    </RowTemplate>
</MudTable>


@code
{
    private List<ProductDto>? products;
    protected async override Task OnInitializedAsync()
    {
        products = await _productService.GetAll();
    }

    private void OnEvaluateCLick()
    {

    }
}
